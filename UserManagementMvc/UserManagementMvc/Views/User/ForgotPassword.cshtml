@model ForgotPasswordModel

<form asp-controller="User" asp-action="ForgotPassword" method="post">
    <section class="bg-light py-3 py-md-5 py-xl-8">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                    <div class="mb-5">
                        <h4 class="text-center mb-4">Forgot Password?</h4>
                    </div>
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                        </div>
                    }
                    <div class="card border border-light-subtle rounded-4">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <form action="#!">
                                <p class="text-center mb-4">
                                    Provide the email address associated with your account to recover your
                                    password.
                                </p>
                                <div class="row gy-3 overflow-hidden">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com">
                                            <label for="email" class="form-label">Email</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button class="btn btn-primary btn-lg" type="submit" style="background-color: rgb(12, 192, 37);">Reset Password</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-4">
                        <a asp-controller="User" asp-action="Login" class="link-secondary text-decoration-none">Login</a>
                        <a asp-controller="User" asp-action="Register" class="link-secondary text-decoration-none">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@model LoginModel

<div class="container-fluid">
	<div class="row main-content bg-success text-center">
		<div class="col-md-4 text-center company__info">
			<span class="company__logo">
				<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
					 class="img-fluid" alt="Sample image">
			</span>
		</div>
		<div class="col-md-8 col-xs-12 col-sm-12 login_form ">
			<div class="container-fluid">
				<div class="row">
					<h2>Sign in</h2>
				</div>

				@if (TempData["Message"] != null)
				{
					<div class="alert alert-success alert-dismissible fade show" role="alert">
						@TempData["Message"]
					</div>
				}

				<div class="row">
					<form asp-controller="User" asp-action="Login" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="row">
							<input asp-for="UserName" type="text" class="form__input" placeholder="Username">
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>

						<div class="row">
							<input asp-for = "Password" type="password" class="form__input"
								   placeholder="Password">
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						<div class="row">
							<input type="checkbox" asp-for="RememberMe">
							<label asp-for="RememberMe">Remember me</label>
							<span asp-validation-for="RememberMe" class="text-danger"></span>
						</div>
						<div class="row">
							<input type="submit" value="Submit" class="btn">
						</div>
					</form>
				</div>
				<div class="row">
					<p>Forgot Password? <a asp-controller="User" asp-action="ForgotPassword">Reset Password</a></p>
				</div>
				<div class="row">
					<p>Don't have an account? <a asp-controller="User" asp-action="Register">Register Here</a></p>
				</div>
			</div>
		</div>
	</div>
</div>